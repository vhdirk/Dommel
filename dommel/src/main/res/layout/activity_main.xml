<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent" >

    <LinearLayout
            android:id="@+id/linearLayout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp" >

        <TextView
                android:id="@+id/lbl_volumeUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/lbl_volumeUsed"
                android:textSize="14dp"
                android:textStyle="bold" />

        <FrameLayout
                android:id="@+id/frameLayout_volumeUsed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

            <ProgressBar
                    android:id="@+id/bar_volumeUsed"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:progressDrawable="@drawable/progress_bg" />

            <LinearLayout
                    android:id="@+id/linearLayout_volumeUsed"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                <TextView
                        android:id="@+id/txt_volumeUsed"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="-1" />
            </LinearLayout>
        </FrameLayout>

        <TextView
                android:id="@+id/lbl_daysLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:text="@string/lbl_daysLeft"
                android:textSize="14dp"
                android:textStyle="bold" />

        <FrameLayout
                android:id="@+id/frameLayout_daysLeft"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

            <ProgressBar
                    android:id="@+id/bar_daysLeft"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="46dp"
                    android:progressDrawable="@drawable/progress_bg" />

            <LinearLayout
                    android:id="@+id/linearLayout_daysLeft"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                <TextView
                        android:id="@+id/txt_daysLeft"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="-1" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
                android:id="@+id/linearLayout_resetDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/lbl_resetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="10dp"
                    android:text="@string/lbl_resetDate"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>

            <TextView
                    android:id="@+id/txt_resetDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="-1" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearLayout_lastUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            <TextView
                    android:id="@+id/lbl_lastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="20dp"
                    android:text="@string/lbl_lastUpdate"
                    android:textSize="12dp"
                    android:paddingRight="10dp"/>

            <TextView
                    android:id="@+id/txt_lastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"

                    android:text="-1" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>